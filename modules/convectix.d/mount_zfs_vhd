#!/usr/local/bin/cbsd
#v10.3.0
MYARG="jname dsk mnt"
MYOPTARG=""
MYDESC="Import and mount ZFS-based storage to specified mount point"
CBSDMODULE="bhyve"
EXTHELP="wf_bhyve.html"

. ${subr}
. ${system}
. ${strings}
. ${tools}

init $*

. ${workdir}/bhyve.subr

dsk_sql=$( cbsdsql ${jailsysdir}/${jname}/local.sqlite "SELECT dsk_path FROM bhyvedsk WHERE jname=\"${jname}\" AND dsk_path=\"${dsk}\"" 2>/dev/null );

[ -z "${dsk_sql}" ] && err 1 "${MAGENTA}No such SQL records for: ${GREEN}${dsk}${MAGENTA} storage for ${GREEN}${jname}${NORMAL}"

dsk_fullpath="${jaildatadir}/${jname}-${jaildatapref}/${dsk}"

[ ! -r "${dsk_fullpath}" ] && err 1 "${MAGENTA}No such image: ${GREEN}${dsk_fullpath}${NORMAL}"

. ${mdtools}

mddev=$( eval find_md_by_img ${dsk_fullpath} )

if [ -z "${mddev}" ]; then
	set -e
	mddev=$( /sbin/mdconfig -a -t vnode -f "${dsk_fullpath}" 2>/dev/null )
	set +u
fi

[ -z "${mddev}" ] && err 1 "${MAGENTA}Error mdconfig for: ${GREEN}${dsk_fullpath}${NORMAL}"

#echo $mddev

[ ! -d "${mnt}" ] && /bin/mkdir -p ${mnt}

zfsdev=
pool=

eval $( /sbin/zpool import -N |/usr/bin/egrep -E "(pool: )|(md0.*ONLINE$)" |/usr/bin/awk '{printf $1" "$2"\n"}' |while read _x _y; do
	[ -z "${_x}" -o -z "${_y}" ] && continue
	[ "${_x}" = "pool:" ] && echo "pool=${_y}"
	[ "${_y}" = "ONLINE" ] && echo "zfsdev=${_x}"
	unset _x _y
done )

#/sbin/zpool import -f -R ${mnt} tank

if [ -z "${pool}" ]; then
	/sbin/mdconfig -d -u ${mddev}
	err 1 "Unable to determine ZFS pool for ${dsk_fullpath}"
fi

if [ -z "${zfsdev}" ]; then
	/sbin/mdconfig -d -u ${mddev}
	err 1 "Unable to determine ZFS disk for pool ${pool} on ${dsk_fullpath}"
fi

res=$( /sbin/zpool import -f -R ${mnt} ${pool} 2>&1 )

if [ $? -ne 0 ]; then
	mdconfig -d -u ${mddev}
	err 1 "$res"
fi

echo "Done"

/sbin/zfs unmount ${mnt} || /sbin/umount -f ${mnt}
/sbin/zpool export ${pool}
/sbin/mdconfig -d -u ${mddev}
