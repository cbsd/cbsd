#!/usr/local/bin/cbsd
#v11.0.10
MYARG=""
MYOPTARG="jname invert"
MYDESC="Return jail ID in output and jail existance as error code (0: no jail, 1: jail exist)"
CBSDMODULE="jail"

. "${subrdir}"/nc.subr
. "${strings}"
. "${cbsdinit}"

EXIST="1"
NOT_EXIST="0"

ARGS=
# exclude invert=  params from args str
for i in $*; do
	prefix7=$( substr --pos=0 --len=7 --str="${i}" )
	if [ "${prefix7}" = "invert=" ]; then
		EXIST="0"
		NOT_EXIST="1"
		continue
	fi
	if [ -z "${ARGS}" ]; then
		ARGS="${i}"
	else
		ARGS="${ARGS} ${i}"
	fi
done

[ -z "${ARGS}" ] && exit ${NOT_EXIST}
[ -z "${jname}" ] && jname="${ARGS}"

. "${subrdir}"/rcconf.subr
[ $? -eq 1 ] && exit ${NOT_EXIST}

# jail exist
echo "${myjid}"

exit ${EXIST}
