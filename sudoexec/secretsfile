#!/usr/local/bin/cbsd
#v9.2.2
MYARG="jname mode"
MYOPTARG=""
MYDESC="Generate secrets file for jail"

. "${subrdir}"/nc.subr
. "${cbsdinit}"

SECFILE="${etcdir}/${jname}.secrets"

[ ! -f "${SECFILE}" ] && exit 0

case ${mode} in
	"on")
		${CHOWN_CMD} root:wheel "${SECFILE}" && ${CHMOD_CMD} 0600 "${SECFILE}"
	;;
	"off")
		${CHOWN_CMD} "${cbsduser}":"${cbsduser}" "${SECFILE}" && ${CHMOD_CMD} 0660 "${SECFILE}"
	;;
esac
